  "setup": {
    "prerequisites": [
      "Ruby 3.2.0 or higher",
      "PostgreSQL 15.0 or higher",
      "Node.js 18.0.0 or higher",
      "Yarn 1.22.0 or higher",
      "Git"
    ],
    "installation": [
      "gem install rails -v 7.1.0",
      "rails new my-rails-app --database=postgresql --css=tailwind",
      "cd my-rails-app",
      "bundle install",
      "rails db:create",
      "rails db:migrate",
      "rails server"
    ],
    "configuration": [
      {
        "filename": "config/database.yml",
        "content": "default: &default\n  adapter: postgresql\n  encoding: unicode\n  pool: <%= ENV.fetch(\"RAILS_MAX_THREADS\") { 5 } %>\n\ndevelopment:\n  <<: *default\n  database: my_rails_app_development\n\ntest:\n  <<: *default\n  database: my_rails_app_test\n\nproduction:\n  <<: *default\n  url: <%= ENV['DATABASE_URL'] %>\n",
        "description": "Database configuration for Rails"
      },
      {
        "filename": "config/application.rb",
        "content": "require_relative \"boot\"\n\nrequire \"rails/all\"\n\nBundler.require(*Rails.groups)\n\nmodule MyRailsApp\n  class Application < Rails::Application\n    config.load_defaults 7.1\n    \n    config.time_zone = \"UTC\"\n    config.i18n.default_locale = :en\n  end\nend\n",
        "description": "Rails application configuration"
      },
      {
        "filename": "Gemfile",
        "content": "source \"https://rubygems.org\"\n\ngem \"rails\", \"~> 7.1.0\"\ngem \"pg\", \"~> 1.1\"\ngem \"puma\", \"~> 6.0\"\ngem \"bootsnap\", require: false\n\ngroup :development, :test do\n  gem \"rspec-rails\"\n  gem \"factory_bot_rails\"\n  gem \"capybara\"\n  gem \"rubocop\", require: false\nend\n\ngroup :development do\n  gem \"web-console\"\n  gem \"brakeman\"\nend\n",
        "description": "Ruby dependencies for Rails application"
      }
    ]
  },
